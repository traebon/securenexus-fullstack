# PowerDNS Admin Environment Configuration
SECRET_KEY_FILE=/run/secrets/pda_secret_key
SQLALCHEMY_DATABASE_URI_PASSWORD_FILE=/run/secrets/pdns_db_password
SQLALCHEMY_TRACK_MODIFICATIONS=False

# PowerDNS API Configuration
PDNS_STATS_URL=http://pdns:8081
PDNS_API_KEY_FILE=/run/secrets/pdns_api_key
PDNS_VERSION=4.6

# Authentication via Authentik OIDC
OIDC_CLIENT_ID=pdns-admin
OIDC_CLIENT_SECRET_FILE=/run/secrets/pda_oidc_secret
OIDC_DISCOVERY_URL=https://authentik.${DOMAIN}/application/o/pdns-admin/.well-known/openid_configuration
OIDC_METADATA_URL=https://authentik.${DOMAIN}/application/o/pdns-admin/.well-known/openid_configuration
OIDC_RESPONSE_TYPE=code
OIDC_SCOPES=openid profile email
OIDC_REDIRECT_URI=https://dns.${DOMAIN}/oidc/callback

# Security Settings
SESSION_TIMEOUT=10
CSRF_ENABLED=True
LOGIN_LDAP_ENABLED=False
SIGNUP_ENABLED=False
LOCAL_DB_ENABLED=False

# Logging
LOG_LEVEL=INFO