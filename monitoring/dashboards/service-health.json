{
  "title": "SecureNexus - Service Health Overview",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "time": {"from": "now-1h", "to": "now"},
  "panels": [
    {
      "type": "stat",
      "title": "Services Up",
      "datasource": {"type": "prometheus", "uid": "Prometheus"},
      "targets": [
        {
          "expr": "sum(up)",
          "legendFormat": "Services Online",
          "refId": "A"
        }
      ],
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "red", "value": null},
              {"color": "yellow", "value": 5},
              {"color": "green", "value": 8}
            ]
          }
        }
      }
    },
    {
      "type": "stat",
      "title": "DNS External Queries",
      "datasource": {"type": "prometheus", "uid": "Prometheus"},
      "targets": [
        {
          "expr": "sum(rate(coredns_dns_requests_total{zone=\"securenexus.net.\"}[5m])) * 60",
          "legendFormat": "Queries/min",
          "refId": "A"
        }
      ],
      "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "blue", "value": null},
              {"color": "green", "value": 1},
              {"color": "yellow", "value": 60}
            ]
          }
        }
      }
    },
    {
      "type": "stat",
      "title": "HTTP Services",
      "datasource": {"type": "prometheus", "uid": "Prometheus"},
      "targets": [
        {
          "expr": "sum(probe_success{job=\"blackbox-http\"})",
          "legendFormat": "HTTP OK",
          "refId": "A"
        }
      ],
      "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0}
    },
    {
      "type": "stat",
      "title": "Container Health",
      "datasource": {"type": "prometheus", "uid": "Prometheus"},
      "targets": [
        {
          "expr": "sum(container_last_seen) > 0",
          "legendFormat": "Containers Running",
          "refId": "A"
        }
      ],
      "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0}
    },
    {
      "type": "table",
      "title": "Service Status",
      "datasource": {"type": "prometheus", "uid": "Prometheus"},
      "targets": [
        {
          "expr": "up",
          "legendFormat": "{{job}} - {{instance}}",
          "refId": "A",
          "format": "table"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {"Time": true, "__name__": true},
            "renameByName": {"Value": "Status", "job": "Service", "instance": "Instance"}
          }
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "DNS Propagation Status",
      "datasource": {"type": "prometheus", "uid": "Prometheus"},
      "targets": [
        {
          "expr": "probe_success{job=\"blackbox-dns\"}",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
      "fieldConfig": {
        "defaults": {
          "min": 0,
          "max": 1,
          "color": {"mode": "palette-classic"}
        }
      }
    },
    {
      "type": "timeseries",
      "title": "System Load",
      "datasource": {"type": "prometheus", "uid": "Prometheus"},
      "targets": [
        {
          "expr": "node_load1",
          "legendFormat": "1m load",
          "refId": "A"
        },
        {
          "expr": "node_load5",
          "legendFormat": "5m load",
          "refId": "B"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12}
    },
    {
      "type": "timeseries",
      "title": "Memory Usage",
      "datasource": {"type": "prometheus", "uid": "Prometheus"},
      "targets": [
        {
          "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
          "legendFormat": "Memory %",
          "refId": "A"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "max": 100,
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 70},
              {"color": "red", "value": 90}
            ]
          }
        }
      }
    }
  ]
}